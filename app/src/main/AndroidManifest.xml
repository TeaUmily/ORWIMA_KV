<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.ferit.tumiljanovic.bdayreminder">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:configChanges="orientation"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="hr.ferit.tumiljanovic.bdayreminder.screen.home.HomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name="hr.ferit.tumiljanovic.bdayreminder.screen.registration.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="hr.ferit.tumiljanovic.bdayreminder.screen.login.LoginActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>